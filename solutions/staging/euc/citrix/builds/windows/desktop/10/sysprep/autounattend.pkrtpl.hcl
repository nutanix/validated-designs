         <UserData>
            <AcceptEula>true</AcceptEula>
            <FullName>${build_username}</FullName>
            <Organization>${build_username}</Organization>
            <ProductKey>
               <Key>${os_installer_kms_key}</Key>
               <WillShowUI>OnError</WillShowUI>
            </ProductKey>
